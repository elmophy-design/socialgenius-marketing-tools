    border-radius: 8px;
    border-left: 4px solid var(--primary);
    cursor: pointer;
    transition: var(--transition);
}

.copy-variation:hover {
    background: #EDE9FE;
    transform: translateX(5px);
}

.hashtags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

.hashtag {
    background: #E0E7FF;
    color: var(--primary-dark);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    cursor: pointer;
    transition: var(--transition);
}

.hashtag:hover {
    background: var(--primary);
    color: white;
}

.actions-section {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.action-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border: 2px solid var(--primary);
    border-radius: 8px;
    background: var(--primary);
