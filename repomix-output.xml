   QUICK ACTIONS
   ============================================ */
.quick-actions-section {
    margin: 2rem 0;
}

.quick-actions-section h2 {
    text-align: center;
    margin-bottom: 1.5rem;
    color: #004aad;
}

.quick-actions {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
}

.quick-action {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 2px solid transparent;
}

.quick-action:hover {
    border-color: #004aad;
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0, 74, 173, 0.15);
}

.quick-action-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
}

/* ============================================
   TOOL CATEGORIES
   ============================================ */
.tool-categories {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    justify-content: center;
}

.category-btn {
    background: white;
    padding: 0.8rem 1.5rem;
    border-radius: 25px;
    border: 2px solid #e9ecef;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 500;
    font-size: 1rem;
}

.category-btn.active {
    background: #004aad;
    color: white;
    border-color: #004aad;
}

.category-btn:hover:not(.active) {
    border-color: #004aad;
    transform: translateY(-2px);
}

/* ============================================
   TOOLS GRID
   ============================================ */
.tools-section {
    padding: 2rem 0;
}

.tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.tool-card {
    background: white;
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 2px solid transparent;
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.tool-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 32px rgba(0, 74, 173, 0.15);
    border-color: #004aad;
}

.tool-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    background: linear-gradient(135deg, #004aad, #0066ff);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
}

.tool-card h3 {
    font-size: 1.5rem;
    color: #004aad;
    margin-bottom: 1rem;
}

.tool-card p {
