    try {
        const posts = await SocialMediaPost.find({ userId })
            .sort({ generatedAt: -1 })
            .limit(limit)
            .select('-__v');
        
        const history = await UserHistory.find({ userId })
            .sort({ timestamp: -1 })
            .limit(limit)
            .select('-__v');
        
        return {
            posts,
            history
        };
    } catch (error) {
        console.error('Error fetching user history:', error);
