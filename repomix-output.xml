import React, { createContext, useContext, useState, useEffect } from 'react';
import { auth, onAuthStateChanged, signOut } from '../firebase';

const AuthContext = createContext();

export const useAuth = () => useContext(AuthContext);

export const AuthProvider = ({ children }) => {
    const [currentUser, setCurrentUser] = useState(null);
    const [loading, setLoading] = useState(true);
    const [isPremium, setIsPremium] = useState(false); // Mock Premium Status

    useEffect(() => {
        // Subscribe to user authentication state changes
        const unsubscribe = onAuthStateChanged(auth, (user) => {
            setCurrentUser(user);
            setLoading(false);
            
            // --- MOCK PREMIUM LOGIC ---
            // Simulate premium status based on user being logged in (for demo purposes)
            // In a real app, this would check Firestore for a subscription flag.
            setIsPremium(!!user); 
        });

        // Cleanup subscription on component unmount
        return unsubscribe;
    }, []);

    const logout = () => {
        signOut(auth);
    };

    const value = {
        currentUser,
        isLoggedIn: !!currentUser,
        isPremium,
        loading,
        logout
    };

    return (
        <AuthContext.Provider value={value}>
            {!loading && children}
            {loading && (
                // Simple Loading Screen (Optional)
                <div style={{ display: 'flex', justifyContent: 'center', alignItems: 'center', height: '100vh', fontSize: '24px' }}>
                    Loading Application...
                </div>
            )}
        </AuthContext.Provider>
    );
};
