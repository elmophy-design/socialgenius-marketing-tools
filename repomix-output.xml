    tiktok: { maxTitleLength: 100, maxDescLength: 150, urlRequired: false, name: 'TikTok' }
  };

  const toneTemplates = {
    professional: {
      adjectives: ['enterprise-grade', 'premium', 'advanced', 'sophisticated', 'comprehensive'],
      phrases: ['Maximize efficiency', 'Enterprise-ready solution', 'Professional-grade performance'],
      powerWords: ['Optimize', 'Streamline', 'Enhance', 'Transform', 'Accelerate']
    },
    casual: {
      adjectives: ['awesome', 'simple', 'easy', 'fun', 'practical'],
      phrases: ["You'll love this", 'Game-changing tips', 'Super helpful'],
      powerWords: ['Discover', 'Experience', 'Simplify', 'Elevate', 'Transform']
    },
    urgent: {
      adjectives: ['limited-time', 'exclusive', 'time-sensitive', 'priority', 'immediate'],
      phrases: ['Limited availability', 'Exclusive opportunity', 'Time-sensitive offer'],
      powerWords: ['Act', 'Secure', 'Reserve', 'Access', 'Claim']
    },
    humorous: {
      adjectives: ['hilarious', 'fun', 'witty', 'entertaining', 'amusing'],
      phrases: ['Get ready to smile', 'Fun meets function', 'Seriously good'],
      powerWords: ['Enjoy', 'Delight', 'Surprise', 'Amaze', 'Entertain']
    },
    inspirational: {
      adjectives: ['transformative', 'empowering', 'visionary', 'innovative', 'progressive'],
      phrases: ['Unlock potential', 'Achieve excellence', 'Drive innovation'],
      powerWords: ['Inspire', 'Empower', 'Transform', 'Elevate', 'Achieve']
    }
  };

  const ctaOptions = {
    'buy-now': ['Buy Now', 'Purchase Today', 'Shop Now'],
    'learn-more': ['Learn More', 'Discover More', 'Explore Features'],
    'sign-up': ['Sign Up', 'Join Now', 'Register Today'],
    'get-started': ['Get Started', 'Begin Today', 'Start Now'],
    'shop-now': ['Shop Now', 'Browse Collection', 'View Products'],
    'download': ['Download Now', 'Get App', 'Install Now']
  };

  // ============================================
  // HELPER FUNCTIONS
  // ============================================
  const getRandomItem = (array) => array[Math.floor(Math.random() * array.length)];

  const generateTitle = (config, toneTemplate) => {
    const { productName } = formData;
    const { adjectives, powerWords, phrases } = toneTemplate;
    
    const templates = [
      `${productName}: ${getRandomItem(phrases)}`,
      `${getRandomItem(adjectives)} ${productName} Solution`,
      `${getRandomItem(powerWords)} Your Results with ${productName}`,
      `${productName} - ${getRandomItem(adjectives)} Performance`
    ];

    let title = getRandomItem(templates);
    if (title.length > config.maxTitleLength) {
      title = title.substring(0, config.maxTitleLength - 3) + '...';
    }
    return title;
  };

  const generateDescription = (config, toneTemplate, ctaPhrases) => {
    const { productDescription } = formData;
    const { adjectives, phrases, powerWords } = toneTemplate;
    const cta = getRandomItem(ctaPhrases);
    
    const templates = [
      `${productDescription}. ${getRandomItem(phrases)}. ${cta} to ${getRandomItem(powerWords).toLowerCase()} your outcomes.`,
      `Discover our ${getRandomItem(adjectives)} solution. ${productDescription}. ${cta} for superior results.`,
      `${getRandomItem(phrases)} with ${formData.productName}. ${productDescription}. ${cta} today.`
    ];

    let description = getRandomItem(templates);
    if (description.length > config.maxDescLength) {
      description = description.substring(0, config.maxDescLength - 3) + '...';
    }
    return description;
  };

  const generateVariation = (index, toneTemplate, ctaPhrases) => {
    const { productName, keywords } = formData;
    const keywordList = keywords.split(',').map(k => k.trim()).filter(k => k);
    const { powerWords } = toneTemplate;
    const cta = getRandomItem(ctaPhrases);
    
    const variations = [
      `${getRandomItem(powerWords)} your performance with ${productName}.\n\nKey features include:\n‚Ä¢ ${keywordList[0] || 'Advanced functionality'}\n‚Ä¢ ${keywordList[1] || 'Premium quality'}\n‚Ä¢ ${keywordList[2] || 'Reliable performance'}\n\n${cta} to experience the difference.`,
      `Transform your workflow with ${productName}.\n\nDesigned for ${formData.targetAudience}, this solution delivers measurable results and exceptional value.\n\n${cta} to unlock your potential.`,
      `${productName} provides the solution you need to ${getRandomItem(powerWords).toLowerCase()} outcomes and drive success.\n\n${cta} to implement this advantage.`
    ];

    return variations[index] || variations[0];
  };

  const generateHashtags = () => {
    const { productName, keywords } = formData;
    const keywordList = keywords.split(',').map(k => k.trim()).filter(k => k);
    
    const baseHashtags = [productName.replace(/\s+/g, ''), 'Business', 'Solution'];
    const keywordHashtags = keywordList.slice(0, 3).map(k => k.replace(/\s+/g, ''));
    const industryTags = ['Innovation', 'Technology', 'Growth'];
    
    return [...new Set([...baseHashtags, ...keywordHashtags, ...industryTags])]
      .map(tag => '#' + tag.replace(/[^a-zA-Z0-9]/g, ''))
      .slice(0, 8);
  };

  const generateUrl = () => {
    return 'www.' + formData.productName.toLowerCase().replace(/\s+/g, '') + '.com';
  };

  // ============================================
  // EVENT HANDLERS
  // ============================================
  const handleInputChange = (e) => {
    const { name, value } = e.target;
    setFormData(prev => ({ ...prev, [name]: value }));
  };

  const handleSubmit = async (e) => {
    e.preventDefault();

    if (!formData.productName.trim()) {
      alert('Please enter a product or service name');
      return;
    }

    if (!formData.productDescription.trim()) {
      alert('Please describe your product or service');
      return;
    }

    setLoading(true);

    // Simulate API call
    setTimeout(() => {
      const config = platformConfigs[formData.platform];
      const toneTemplate = toneTemplates[formData.tone];
      const ctaPhrases = ctaOptions[formData.cta];

      const variations = [0, 1, 2].map(i => generateVariation(i, toneTemplate, ctaPhrases));

      setResult({
        platform: config.name,
        title: generateTitle(config, toneTemplate),
        description: generateDescription(config, toneTemplate, ctaPhrases),
        url: generateUrl(),
        variations,
        hashtags: generateHashtags()
      });

      setShowResults(true);
      setLoading(false);

      setTimeout(() => {
        document.getElementById('results-section')?.scrollIntoView({ behavior: 'smooth' });
      }, 100);
    }, 1500);
  };

  const copyToClipboard = (text) => {
    navigator.clipboard.writeText(text).then(() => {
      showNotification('Copied to clipboard!');
    }).catch(() => {
      showNotification('Failed to copy');
    });
  };

  const copyAll = () => {
    if (!result) return;
    
    const allText = [
      `Ad Title: ${result.title}`,
      `Description: ${result.description}`,
      `URL: ${result.url}`,
      '',
      'Ad Variations:',
      ...result.variations.map((v, i) => `\nVariation ${i + 1}:\n${v}`),
      '',
      'Hashtags:',
      result.hashtags.join(' ')
    ].join('\n');

    copyToClipboard(allText);
  };

  const showNotification = (message) => {
    // Simple notification - you can enhance this
    const notification = document.createElement('div');
    notification.className = 'notification-toast';
    notification.textContent = message;
    document.body.appendChild(notification);
    
    setTimeout(() => {
      notification.remove();
    }, 3000);
  };

  // ============================================
  // RENDER
  // ============================================
  return (
    <div className="ad-copy-container">
      <header className="ad-copy-header">
        <div className="logo">
          <span className="logo-icon">üé™</span>
          <span>Ad Copy Generator</span>
        </div>
      </header>

      <div className="hero">
        <h1>AI-Powered Ad Copy Generator</h1>
        <p>Create high-converting ad copy for Google, Facebook, LinkedIn, and other platforms in seconds</p>
      </div>

      <div className="main-content">
        <section className="input-section">
          <h2>Generate Your Ad Copy</h2>
          
          <form onSubmit={handleSubmit}>
            <div className="form-group">
              <label htmlFor="productName">Product/Service Name</label>
              <input
                type="text"
                id="productName"
                name="productName"
                className="form-input"
                placeholder="e.g., Smart Fitness Tracker"
                value={formData.productName}
                onChange={handleInputChange}
                required
              />
            </div>

            <div className="form-group">
              <label htmlFor="productDescription">Product Description</label>
              <textarea
                id="productDescription"
                name="productDescription"
                className="form-textarea"
                placeholder="Describe your product or service..."
                value={formData.productDescription}
                onChange={handleInputChange}
                required
              />
            </div>

            <div className="form-grid">
              <div className="form-group">
                <label htmlFor="platform">Platform</label>
                <select
                  id="platform"
                  name="platform"
                  className="form-select"
                  value={formData.platform}
                  onChange={handleInputChange}
                >
                  <option value="google">Google Ads</option>
                  <option value="facebook">Facebook</option>
                  <option value="instagram">Instagram</option>
                  <option value="twitter">Twitter/X</option>
                  <option value="linkedin">LinkedIn</option>
                  <option value="tiktok">TikTok</option>
                </select>
              </div>

              <div className="form-group">
                <label htmlFor="adFormat">Ad Format</label>
                <select
                  id="adFormat"
                  name="adFormat"
                  className="form-select"
                  value={formData.adFormat}
                  onChange={handleInputChange}
                >
                  <option value="search">Search Ad</option>
                  <option value="display">Display Ad</option>
                  <option value="video">Video Ad</option>
                  <option value="carousel">Carousel Ad</option>
                  <option value="story">Story Ad</option>
                </select>
              </div>

              <div className="form-group">
                <label htmlFor="tone">Tone of Voice</label>
                <select
                  id="tone"
                  name="tone"
                  className="form-select"
                  value={formData.tone}
                  onChange={handleInputChange}
                >
                  <option value="professional">Professional</option>
                  <option value="casual">Casual/Friendly</option>
                  <option value="urgent">Urgent</option>
                  <option value="humorous">Humorous</option>
                  <option value="inspirational">Inspirational</option>
                </select>
              </div>

              <div className="form-group">
                <label htmlFor="targetAudience">Target Audience</label>
                <select
                  id="targetAudience"
                  name="targetAudience"
                  className="form-select"
                  value={formData.targetAudience}
                  onChange={handleInputChange}
                >
                  <option value="general">General Audience</option>
                  <option value="business">Business Professionals</option>
                  <option value="young-adults">Young Adults (18-25)</option>
                  <option value="parents">Parents</option>
                  <option value="entrepreneurs">Entrepreneurs</option>
                </select>
              </div>
            </div>

            <div className="form-group">
              <label htmlFor="keywords">Key Features/Benefits</label>
              <input
                type="text"
                id="keywords"
                name="keywords"
                className="form-input"
                placeholder="e.g., waterproof, long battery, heart rate monitoring"
                value={formData.keywords}
                onChange={handleInputChange}
              />
              <small className="input-hint">Separate with commas</small>
            </div>

            <div className="form-group">
              <label htmlFor="cta">Call-to-Action</label>
              <select
                id="cta"
                name="cta"
                className="form-select"
                value={formData.cta}
                onChange={handleInputChange}
              >
                <option value="buy-now">Buy Now</option>
                <option value="learn-more">Learn More</option>
                <option value="sign-up">Sign Up</option>
                <option value="get-started">Get Started</option>
                <option value="shop-now">Shop Now</option>
                <option value="download">Download</option>
              </select>
            </div>

            <button type="submit" className="generate-btn" disabled={loading}>
              {loading ? 'Generating...' : 'Generate Ad Copy'}
            </button>
          </form>
        </section>

        <section className="results-section" id="results-section">
          <h2>Generated Ad Copy</h2>
          
          {!showResults && !loading && (
            <div className="results-placeholder">
              <div className="placeholder-icon">‚ú®</div>
              <h3>Your ad copy will appear here</h3>
              <p>Fill out the form and click "Generate Ad Copy" to create compelling advertisements</p>
            </div>
          )}

          {loading && (
            <div className="loading-indicator">
              <div className="spinner"></div>
              <p>AI is crafting your perfect ad copy...</p>
            </div>
          )}

          {showResults && result && (
            <div className="results-content">
              <div className="platform-badge">{result.platform}</div>
              
              <div className="ad-preview">
                <div className="ad-header">
                  <span className="ad-title">{result.title}</span>
                  <span className="ad-indicator">Ad</span>
                </div>
                <div className="ad-url">{result.url}</div>
                <div className="ad-description">{result.description}</div>
              </div>

              <div className="copy-section">
                <h3>Ad Copy Variations</h3>
                <div className="copy-variations">
                  {result.variations.map((variation, index) => (
                    <div
                      key={index}
                      className="copy-variation"
                      onClick={() => copyToClipboard(variation)}
                    >
                      <div className="variation-header">
                        <span className="variation-number">Variation {index + 1}</span>
                      </div>
                      <div className="variation-content">
                        {variation.split('\n').map((line, i) => (
                          <React.Fragment key={i}>
                            {line}
                            {i < variation.split('\n').length - 1 && <br />}
                          </React.Fragment>
                        ))}
                      </div>
                    </div>
                  ))}
                </div>
              </div>

              <div className="copy-section">
                <h3>Hashtags</h3>
                <div className="hashtags">
                  {result.hashtags.map((hashtag, index) => (
                    <div
                      key={index}
                      className="hashtag"
                      onClick={() => copyToClipboard(hashtag)}
                    >
                      {hashtag}
