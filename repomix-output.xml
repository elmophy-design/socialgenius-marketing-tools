                  <span className={styles.quickActionLabel}>Settings</span>
                </button>
              </div>
            </section>
          </div>
        </div>
      </main>

      <footer className="bg-gray-800 text-white py-6 mt-12">
        {/* ... Footer Content ... */}
      </footer>

      {renderModals()}
    </div>
  );
}

