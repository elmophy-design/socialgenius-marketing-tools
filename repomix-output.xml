.auth-required:hover .auth-overlay {
    opacity: 1;
    visibility: visible;
}

.auth-prompt {
    text-align: center;
    color: #004aad;
    padding: 2rem;
}

.auth-prompt h4 {
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
}

.auth-prompt p {
    color: #666;
    margin-bottom: 1rem;
}

/* ============================================
   RECENT ACTIVITY
   ============================================ */
.recent-activity {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    margin-top: 2rem;
}

.recent-activity h3 {
    color: #004aad;
    margin-bottom: 1rem;
}

.activity-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid #e9ecef;
}

.activity-item:last-child {
    border-bottom: none;
}

.activity-icon {
    width: 40px;
    height: 40px;
    background: #e8f4ff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #004aad;
    font-size: 1.2rem;
