  .tools-grid {
    grid-template-columns: repeat(3, 1fr); /* 3 columns for medium-large screens */
  }
}

@media (max-width: 900px) {
  .tools-grid {
    grid-template-columns: repeat(2, 1fr); /* 2 columns for tablets */
  }
}

@media (max-width: 600px) {
