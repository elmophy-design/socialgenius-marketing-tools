export const QuickPostModal = ({ isOpen, onClose, onPublish }) => {
  const [postData, setPostData] = useState({
    platforms: ['facebook', 'instagram'],
    template: 'engagement',
    content: '',
    mediaUrl: '',
    hashtags: [],
    scheduleDate: '',
    scheduleTime: '12:00'
  });

  const [selectedFeatures, setSelectedFeatures] = useState([]);

  if (!isOpen) return null;

  const platforms = [
    { id: 'facebook', name: 'Facebook', icon: 'fab fa-facebook' },
    { id: 'instagram', name: 'Instagram', icon: 'fab fa-instagram' },
    { id: 'twitter', name: 'Twitter', icon: 'fab fa-twitter' },
    { id: 'linkedin', name: 'LinkedIn', icon: 'fab fa-linkedin' },
    { id: 'tiktok', name: 'TikTok', icon: 'fab fa-tiktok' }
  ];

  const templates = [
    { id: 'promotion', name: 'Promotion', icon: 'fas fa-tag', description: 'Sales & offers' },
    { id: 'announcement', name: 'Announcement', icon: 'fas fa-bullhorn', description: 'News & updates' },
    { id: 'engagement', name: 'Engagement', icon: 'fas fa-heart', description: 'Questions & polls' },
    { id: 'educational', name: 'Educational', icon: 'fas fa-graduation-cap', description: 'Tips & how-tos' }
  ];

  const templateFeatures = {
    promotion: ['Discount Badge', 'Urgency Timer', 'Limited Offer Tag', 'Shop Now Button'],
    announcement: ['Breaking News', 'Press Release', 'Update Badge', 'Learn More Link'],
    engagement: ['Poll Options', 'Question Prompt', 'Tag Friends CTA', 'Emoji Reactions'],
    educational: ['Step-by-Step', 'Pro Tips', 'Infographic', 'Tutorial Link']
  };

  const handlePlatformToggle = (platformId) => {
    setPostData(prev => ({
      ...prev,
      platforms: prev.platforms.includes(platformId)
        ? prev.platforms.filter(p => p !== platformId)
        : [...prev.platforms, platformId]
    }));
  };

  const handleTemplateSelect = (templateId) => {
    setPostData(prev => ({ ...prev, template: templateId }));
    setSelectedFeatures([]);
  };

  const handleFeatureToggle = (feature) => {
    setSelectedFeatures(prev =>
      prev.includes(feature)
        ? prev.filter(f => f !== feature)
        : [...prev, feature]
    );
  };

  const handlePublish = () => {
    onPublish({ ...postData, features: selectedFeatures });
    onClose();
  };

  return (
    <div className="modal-overlay" onClick={onClose}>
      <div className="modal-content quick-post-modal" onClick={e => e.stopPropagation()}>
        <div className="modal-header">
          <h3>Quick Post</h3>
          <button className="close-btn" onClick={onClose}>
            <i className="fas fa-times"></i>
          </button>
        </div>

        <div className="modal-body">
          {/* Platform Selection */}
          <div className="form-group">
            <label>Select Platforms</label>
            <div className="platforms-selector">
              {platforms.map(platform => (
                <div
                  key={platform.id}
                  className={`platform-option ${postData.platforms.includes(platform.id) ? 'selected' : ''}`}
                  onClick={() => handlePlatformToggle(platform.id)}
                >
                  <i className={platform.icon}></i>
                  <span>{platform.name}</span>
                </div>
              ))}
            </div>
          </div>

          {/* Template Selection */}
          <div className="form-group">
            <label>Content Template</label>
            <div className="templates-grid">
              {templates.map(template => (
                <div
                  key={template.id}
                  className={`template-card ${postData.template === template.id ? 'selected' : ''}`}
                  onClick={() => handleTemplateSelect(template.id)}
                >
                  <i className={template.icon}></i>
                  <div className="template-name">{template.name}</div>
                  <div className="template-description">{template.description}</div>
                </div>
              ))}
            </div>
          </div>

          {/* Template Features */}
          {postData.template && (
            <div className="form-group">
              <label>Template Features</label>
              <div className="features-list">
                {templateFeatures[postData.template].map(feature => (
                  <div
                    key={feature}
                    className={`feature-chip ${selectedFeatures.includes(feature) ? 'selected' : ''}`}
                    onClick={() => handleFeatureToggle(feature)}
                  >
                    <i className={`fas fa-${selectedFeatures.includes(feature) ? 'check-circle' : 'circle'}`}></i>
                    <span>{feature}</span>
                  </div>
                ))}
              </div>
            </div>
          )}

          {/* Content Editor */}
          <div className="form-group">
            <label>Post Content</label>
            <textarea
              className="form-textarea"
              rows="4"
              placeholder="What's on your mind?"
              value={postData.content}
              onChange={e => setPostData(prev => ({ ...prev, content: e.target.value }))}
            />
            <button className="ai-generate-btn">
              <i className="fas fa-robot"></i>
              AI Generate Content
            </button>
          </div>

          {/* Suggested Hashtags */}
          <div className="form-group">
            <label>Hashtag Suggestions</label>
            <div className="hashtag-suggestions">
              {['#socialmedia', '#marketing', '#digital', '#content', '#engagement', '#trending'].map(tag => (
                <div key={tag} className="hashtag-chip" onClick={() => {
                  setPostData(prev => ({
                    ...prev,
                    content: prev.content + ' ' + tag
                  }));
                }}>
                  {tag}
                </div>
              ))}
            </div>
          </div>

          {/* Scheduling */}
          <div className="form-group">
            <label>Schedule Post</label>
            <div className="schedule-inputs">
              <input
                type="date"
                className="form-input"
                value={postData.scheduleDate}
                onChange={e => setPostData(prev => ({ ...prev, scheduleDate: e.target.value }))}
              />
              <div className="time-slots">
                {['9:00 AM', '12:00 PM', '3:00 PM', '6:00 PM'].map(time => (
                  <div
                    key={time}
                    className={`time-slot ${postData.scheduleTime === time ? 'selected' : ''}`}
                    onClick={() => setPostData(prev => ({ ...prev, scheduleTime: time }))}
                  >
                    {time}
                  </div>
                ))}
              </div>
            </div>
          </div>

          {/* Performance Prediction */}
          <div className="performance-prediction">
            <div className="prediction-header">
              <span>AI Performance Prediction</span>
              <span className="prediction-score">High Potential</span>
            </div>
            <div className="prediction-bar">
              <div className="prediction-fill" style={{ width: '85%' }}></div>
            </div>
            <p className="prediction-text">Similar posts achieved 4.2% engagement rate</p>
          </div>
        </div>

        <div className="modal-footer">
          <button className="btn btn-secondary" onClick={onClose}>Cancel</button>
          <button className="btn btn-outline">Schedule Post</button>
          <button className="btn btn-success" onClick={handlePublish}>Publish Now</button>
        </div>
      </div>
    </div>
  );
};

