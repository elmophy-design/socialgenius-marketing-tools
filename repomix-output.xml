   AUTH OVERLAY
   ============================================ */
.auth-required {
    position: relative;
}

.auth-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.95);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 16px;
    flex-direction: column;
    gap: 1rem;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
}

.auth-required:hover .auth-overlay {
    opacity: 1;
    visibility: visible;
}

.auth-prompt {
    text-align: center;
    color: #004aad;
    padding: 2rem;
}

.auth-prompt h4 {
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
}

.auth-prompt p {
    color: #666;
    margin-bottom: 1rem;
}

/* ============================================
