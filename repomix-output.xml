    border-radius: 15px;
    font-weight: 600;
    font-size: 0.9rem;
}

.awareness .stage-percentage { color: var(--awareness); }
.interest .stage-percentage { color: var(--interest); }
.decision .stage-percentage { color: var(--decision); }
.action .stage-percentage { color: var(--action); }

.stage-content {
    padding: 1.5rem;
}

.stage-content h4 {
    color: var(--dark);
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
}

.stage-content p {
    color: var(--gray);
    margin-bottom: 1rem;
}

.content-suggestions {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
}

.content-card {
    background: white;
    padding: 1rem;
    border-radius: 8px;
    border: 1px solid var(--gray-light);
    transition: var(--transition);
    cursor: pointer;
}

.content-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow);
}

.content-type {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    display: inline-block;
}

.awareness .content-type { background: #DBEAFE; color: var(--awareness); }
.interest .content-type { background: #D1FAE5; color: var(--interest); }
.decision .content-type { background: #FEF3C7; color: var(--decision); }
.action .content-type { background: #FECACA; color: var(--action); }

.content-title {
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--dark);
}

.content-description {
    font-size: 0.9rem;
    color: var(--gray);
    line-height: 1.4;
}

/* Funnel Metrics */
.funnel-metrics {
    background: var(--light);
    padding: 1.5rem;
    border-radius: var(--border-radius);
}

.funnel-metrics h3 {
    color: var(--primary);
    margin-bottom: 1rem;
    text-align: center;
}

.metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
}

.metric-card {
    background: white;
    padding: 1.5rem;
    border-radius: 8px;
    text-align: center;
    box-shadow: var(--shadow);
}

.metric-value {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 0.5rem;
}

.metric-label {
    font-size: 0.9rem;
    color: var(--gray);
}

/* Tools Section */
