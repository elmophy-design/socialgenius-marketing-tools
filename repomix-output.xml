  { name: 'Facebook', icon: 'fab fa-facebook', color: 'blue-800', bg: 'bg-gradient-to-br from-blue-800 to-blue-900', isTrialAvailable: true },
];

// Helpers for platform badge classes
const getPlatformBadgeClass = (platformName) => {
  switch (platformName.toLowerCase()) {
    case 'instagram':
      return styles.platformBadgeInstagram;
    case 'twitter':
      return styles.platformBadgeTwitter;
    case 'linkedin':
      return styles.platformBadgeLinkedin;
    case 'facebook':
      return styles.platformBadgeFacebook;
    default:
      return '';
  }
};

// 1. Dashboard Stat Card
const StatCard = ({ title, value, icon, borderColor, iconColor }) => (
  <div className={`bg-white p-4 rounded-xl shadow-md border-l-4 border-${borderColor}`}>
    <div className="flex justify-between items-center">
      <div>
        <p className="text-sm text-gray-600">{title}</p>
        <p className="text-2xl font-bold">{value}</p>
      </div>
      <i className={`fas ${icon} text-${iconColor} text-xl`}></i>
    </div>
  </div>
);

// 2. Social Connection Card
const ConnectionCard = ({ platform, isConnected, isPremium }) => {
  const isTrialAllowed = platform.isTrialAvailable;
  const canConnect = isPremium || isTrialAllowed;

  const statusText = isConnected ? 'Connected' : canConnect ? 'Not Connected' : 'Premium Only';
  const statusIcon = isConnected ? 'fa-check-circle text-green-500' : 'fa-times-circle text-red-500';

  return (
    <div
      className={`${styles.connectionCard} ${isConnected ? styles.connectionCardConnected : ''}`}
      data-platform={platform.name.toLowerCase()}
    >
      <div className={styles.cardHeader}>
        <div className={`${styles.platformIcon} ${platform.bg} shadow-lg`}>
          <i className={`${platform.icon} text-white`}></i>
        </div>
        <div
          className={`${styles.connectionStatus} ${
            isConnected ? styles.connectionStatusConnected : ''
          }`}
        >
          <i className={`fas ${statusIcon}`}></i>
          <span>{statusText}</span>
        </div>
      </div>

      <div className={styles.platformInfo}>
        <h3>{platform.name}</h3>
        <p>{isConnected ? 'Last Sync: Now' : 'Connect your account'}</p>
      </div>

      <div className={styles.cardStats}>
        <div className={styles.stat}>
          <span className={styles.statNumber}>0</span>
          <span className={styles.statLabel}>Posts</span>
        </div>
        <div className={styles.stat}>
          <span className={styles.statNumber}>0</span>
          <span className={styles.statLabel}>Engage</span>
        </div>
      </div>

      <button
        className={`${styles.connectBtn} ${!canConnect ? styles.connectBtnDisabled : ''}`}
        disabled={!canConnect}
      >
        <i className="fas fa-link"></i>
        <span>{isConnected ? 'Disconnect' : 'Connect'}</span>
      </button>
    </div>
  );
};

// 3. Generated Post Card
const GeneratedPostCard = ({ post, index }) => (
  <div className={`${styles.postCard} ${styles.fadeInUp}`}>
    <div className={styles.postCardHeader}>
      <div
        className={`${styles.platformBadge} ${getPlatformBadgeClass(post.platform)}`}
      >
        Post #{index + 1} &nbsp; ({post.platform})
      </div>
      <div className={styles.postActions}>
        <button className={`${styles.actionBtn} ${styles.copyBtn}`}>
          Copy
        </button>
        <button className={`${styles.actionBtn} ${styles.scheduleBtn}`}>
          Schedule
        </button>
      </div>
    </div>

    <div className={styles.postContent}>
      {post.copy}
      <div className="mt-2 font-medium text-gray-500">
        {post.hashtags.join(' ')}
      </div>
    </div>

    <div className={styles.postImage}>
      {post.imageUrl ? (
        <img
          src={post.imageUrl}
          alt="AI Generated Visual"
          onError={(e) => {
            e.target.src =
              'https://placehold.co/400x300/a3a3a3/ffffff?text=AI+Visual';
          }}
          className="object-cover w-full h-full"
        />
      ) : (
        <div className={styles.postImagePlaceholder}>AI Visual Preview</div>
      )}
    </div>

    <div className={styles.hashtags}>
      {post.hashtags.map((tag, i) => (
        <span key={i} className={styles.hashtag}>
          {tag}
        </span>
      ))}
    </div>
  </div>
);

// 4. Interest Checkbox
const InterestCheckbox = ({ interest, isChecked, onChange }) => (
  <label className="interest-item flex items-center space-x-2 p-2 border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 transition-colors">
    <input
      type="checkbox"
      name="interests"
      value={interest}
      className="hidden"
      checked={isChecked}
