import React, { useState } from 'react';
import { toolsApi } from '../api/toolsApi';
import './SEOMetaGenerator.css';

const SEOMetaGenerator = () => {
  // ============================================
  // STATE MANAGEMENT
  // ============================================
  const [formData, setFormData] = useState({
    pageTitle: 'Digital Marketing Strategies',
    pageContent: 'Learn the latest digital marketing strategies for 2024 including SEO, social media marketing, content marketing, and email marketing. Discover proven techniques to grow your business online.',
    primaryKeyword: 'digital marketing',
    contentType: 'blog',
    tone: 'professional',
    targetAudience: 'general',
    secondaryKeywords: 'SEO, social media, content marketing, email marketing',
    competitors: ''
  });

  const [result, setResult] = useState(null);
  const [loading, setLoading] = useState(false);
  const [showResults, setShowResults] = useState(false);
  const [notification, setNotification] = useState('');
  const [activeVersion, setActiveVersion] = useState(1);

  // ============================================
  // CONFIGURATION DATA
  // ============================================
  const contentTypes = [
    { value: 'blog', label: 'Blog Post' },
    { value: 'product', label: 'Product Page' },
    { value: 'service', label: 'Service Page' },
    { value: 'landing', label: 'Landing Page' },
    { value: 'homepage', label: 'Homepage' },
    { value: 'article', label: 'News Article' }
  ];

  const tones = [
    { value: 'professional', label: 'Professional' },
    { value: 'casual', label: 'Casual/Friendly' },
    { value: 'authoritative', label: 'Authoritative' },
    { value: 'urgent', label: 'Urgent' },
    { value: 'educational', label: 'Educational' }
  ];

  const targetAudiences = [
    { value: 'general', label: 'General Audience' },
    { value: 'business', label: 'Business Professionals' },
    { value: 'technical', label: 'Technical Users' },
    { value: 'consumers', label: 'Consumers' },
    { value: 'students', label: 'Students' }
  ];

  // ============================================
  // EVENT HANDLERS
  // ============================================
  const handleInputChange = (e) => {
    const { name, value } = e.target;
    setFormData(prev => ({ ...prev, [name]: value }));
  };

  const handleSubmit = async (e) => {
    e.preventDefault();

    if (!formData.pageTitle.trim()) {
      showNotification('Please enter a page title or topic');
      return;
    }

    if (!formData.primaryKeyword.trim()) {
      showNotification('Please enter a primary keyword');
      return;
    }

    setLoading(true);

    try {
      const response = await toolsApi.generateSEOMeta({
        pageTitle: formData.pageTitle,
        pageContent: formData.pageContent,
        primaryKeyword: formData.primaryKeyword,
        contentType: formData.contentType,
        tone: formData.tone,
        targetAudience: formData.targetAudience,
        secondaryKeywords: formData.secondaryKeywords.split(',').map(k => k.trim()).filter(k => k),
        competitors: formData.competitors.split(',').map(c => c.trim()).filter(c => c)
      });

      if (response.success) {
        setResult(response.data);
        setShowResults(true);
        setActiveVersion(1);
        
        // Scroll to results
        setTimeout(() => {
          document.getElementById('results-section')?.scrollIntoView({ behavior: 'smooth' });
        }, 100);
      } else {
        showNotification(`Error: ${response.error || 'Failed to generate meta tags'}`);
      }
    } catch (error) {
      console.error('API Error:', error);
      showNotification('Failed to connect to server. Please try again.');
    } finally {
      setLoading(false);
    }
  };

  const handleSwitchVersion = (version) => {
    setActiveVersion(version);
  };

  const copyToClipboard = (text) => {
    navigator.clipboard.writeText(text).then(() => {
      showNotification('Copied to clipboard!');
    }).catch(() => {
      showNotification('Failed to copy');
    });
  };

  const copyMetaTags = () => {
    if (!result || !result.variations[activeVersion - 1]) return;
    
    const variation = result.variations[activeVersion - 1];
    const metaTags = `<title>${variation.title}</title>\n<meta name="description" content="${variation.description}">`;
    
    copyToClipboard(metaTags);
  };

  const copyAllVariations = () => {
    if (!result) return;
    
    const allText = result.variations.map((v, i) => 
      `Version ${i + 1}:\nTitle: ${v.title}\nDescription: ${v.description}\n`
    ).join('\n');
    
    copyToClipboard(allText);
  };

  const showNotification = (message) => {
    setNotification(message);
    setTimeout(() => setNotification(''), 3000);
  };

  const getScoreColor = (score) => {
    if (score >= 80) return '#10B981'; // Green
    if (score >= 60) return '#F59E0B'; // Yellow
    if (score >= 40) return '#EF4444'; // Red
    return '#6B7280'; // Gray
  };

  const getScoreLabel = (score) => {
    if (score >= 80) return 'Excellent';
    if (score >= 60) return 'Good';
    if (score >= 40) return 'Average';
    return 'Needs Work';
  };

  const getLengthClass = (length, min, max) => {
    if (length >= min && length <= max) return 'good';
    if (length >= min - 5 && length <= max + 5) return 'warning';
    return 'danger';
  };

  // ============================================
  // RENDER
  // ============================================
  return (
    <div className="seo-meta-container">
      {/* Notification Toast */}
      {notification && (
        <div className="notification-toast">
          {notification}
        </div>
      )}

      <header className="seo-meta-header">
        <div className="logo">
          <span className="logo-icon">üîç</span>
          <span>SEO Meta Generator</span>
        </div>
      </header>

      <div className="hero">
        <h1>AI-Powered SEO Meta Generator</h1>
        <p>Generate optimized meta titles and descriptions that improve click-through rates and search rankings</p>
      </div>

      <div className="main-content">
        {/* Input Section */}
        <section className="input-section">
          <h2>Generate Meta Tags</h2>
          
          <form onSubmit={handleSubmit}>
            <div className="form-group">
              <label htmlFor="pageTitle">Page Title</label>
              <input
                type="text"
                id="pageTitle"
                name="pageTitle"
                className="form-input"
                placeholder="Enter your page title or topic"
                value={formData.pageTitle}
                onChange={handleInputChange}
              />
            </div>

            <div className="form-group">
              <label htmlFor="pageContent">Page Content/Description</label>
              <textarea
                id="pageContent"
                name="pageContent"
                className="form-textarea"
                placeholder="Describe your page content, products, or services..."
                rows="4"
                value={formData.pageContent}
                onChange={handleInputChange}
              />
            </div>

            <div className="form-group">
              <label htmlFor="primaryKeyword">Primary Keyword</label>
              <input
                type="text"
                id="primaryKeyword"
                name="primaryKeyword"
                className="form-input"
                placeholder="Main target keyword"
                value={formData.primaryKeyword}
                onChange={handleInputChange}
              />
            </div>

            <div className="form-grid">
              <div className="form-group">
                <label htmlFor="contentType">Content Type</label>
                <select
                  id="contentType"
                  name="contentType"
                  className="form-select"
                  value={formData.contentType}
                  onChange={handleInputChange}
                >
                  {contentTypes.map(type => (
                    <option key={type.value} value={type.value}>
                      {type.label}
                    </option>
                  ))}
                </select>
              </div>

              <div className="form-group">
                <label htmlFor="tone">Tone of Voice</label>
                <select
                  id="tone"
                  name="tone"
                  className="form-select"
                  value={formData.tone}
                  onChange={handleInputChange}
                >
                  {tones.map(tone => (
                    <option key={tone.value} value={tone.value}>
                      {tone.label}
                    </option>
                  ))}
                </select>
              </div>

              <div className="form-group">
                <label htmlFor="targetAudience">Target Audience</label>
                <select
                  id="targetAudience"
                  name="targetAudience"
                  className="form-select"
                  value={formData.targetAudience}
                  onChange={handleInputChange}
                >
                  {targetAudiences.map(audience => (
                    <option key={audience.value} value={audience.value}>
                      {audience.label}
                    </option>
                  ))}
                </select>
              </div>

              <div className="form-group">
                <label htmlFor="competitors">Competitor URLs (Optional)</label>
                <input
                  type="text"
                  id="competitors"
                  name="competitors"
                  className="form-input"
                  placeholder="Competitor URLs separated by commas"
                  value={formData.competitors}
                  onChange={handleInputChange}
                />
              </div>
            </div>

            <div className="form-group">
              <label htmlFor="secondaryKeywords">Secondary Keywords</label>
              <input
                type="text"
                id="secondaryKeywords"
                name="secondaryKeywords"
                className="form-input"
                placeholder="Related keywords separated by commas"
                value={formData.secondaryKeywords}
                onChange={handleInputChange}
              />
              <small className="input-hint">
                Optional: Add supporting keywords for better relevance
              </small>
            </div>

            <button type="submit" className="generate-btn" disabled={loading}>
              {loading ? (
                <>
                  <span className="spinner-small"></span>
                  Generating...
                </>
              ) : (
                'Generate Meta Tags'
              )}
            </button>

            <div className="quick-tips">
              <h3>üí° SEO Best Practices</h3>
              <ul>
                <li><strong>Title:</strong> 50-60 characters, include primary keyword</li>
                <li><strong>Description:</strong> 120-155 characters, compelling call-to-action</li>
                <li>Use power words and create curiosity</li>
                <li>Include numbers and brackets when relevant</li>
              </ul>
            </div>
          </form>
        </section>

        {/* Results Section */}
        <section className="results-section" id="results-section">
          <h2>Generated Meta Tags</h2>
          
          {!showResults && !loading && (
            <div className="results-placeholder">
              <div className="placeholder-icon">‚ú®</div>
              <h3>Your meta tags will appear here</h3>
              <p>Fill out the form and click "Generate Meta Tags" to create optimized SEO meta tags</p>
            </div>
          )}

          {loading && (
            <div className="loading-indicator">
              <div className="spinner"></div>
              <p>Generating optimized meta tags...</p>
            </div>
          )}

          {showResults && result && (
            <div className="results-content">
              <div className="results-header">
                <div className="content-type-badge">
                  {result.contentType}
                </div>
                <div className="score-badge">
                  <span className="score-value" style={{ color: getScoreColor(result.analysis.overallScore) }}>
                    {result.analysis.overallScore}
                  </span>/100
                </div>
              </div>

              {/* Search Preview */}
              <div className="preview-section">
                <h3 className="section-title">Search Engine Preview</h3>
                <div className="search-preview">
                  <div className="search-title">
                    {result.variations[activeVersion - 1]?.title}
                  </div>
                  <div className="search-url">
                    {result.url}
                  </div>
                  <div className="search-description">
                    {result.variations[activeVersion - 1]?.description}
                  </div>
                </div>
              </div>

              {/* Meta Tag Variations */}
              <div className="meta-options">
                <h3 className="section-title">Meta Tag Variations</h3>
                <div className="variations-tabs">
                  {[1, 2, 3].map(version => (
                    <button
                      key={version}
                      className={`tab-btn ${activeVersion === version ? 'active' : ''}`}
                      onClick={() => handleSwitchVersion(version)}
                    >
                      Version {version}
                    </button>
                  ))}
                </div>
                
                <div className="meta-variations">
                  {result.variations.map((variation, index) => (
                    <div 
                      key={index}
                      className={`meta-version ${activeVersion === index + 1 ? 'active' : ''}`}
                    >
                      <div className="meta-card">
                        <div className="meta-header">
                          <h4>Meta Title</h4>
                          <div className={`char-count ${getLengthClass(variation.titleLength, 50, 60)}`}>
                            {variation.titleLength}/60
                          </div>
                        </div>
                        <div className="meta-content">
                          {variation.title}
                        </div>
                        <button 
                          className="copy-btn"
                          onClick={() => copyToClipboard(variation.title)}
                        >
                          Copy
                        </button>
                      </div>
                      
                      <div className="meta-card">
                        <div className="meta-header">
                          <h4>Meta Description</h4>
                          <div className={`char-count ${getLengthClass(variation.descLength, 120, 155)}`}>
                            {variation.descLength}/155
                          </div>
                        </div>
                        <div className="meta-content">
                          {variation.description}
                        </div>
                        <button 
                          className="copy-btn"
                          onClick={() => copyToClipboard(variation.description)}
                        >
                          Copy
                        </button>
                      </div>
                    </div>
                  ))}
                </div>
              </div>

              {/* SEO Analysis */}
              <div className="analysis-section">
                <h3 className="section-title">SEO Analysis</h3>
                <div className="analysis-grid">
                  <div className="analysis-card">
                    <div className="analysis-icon">üìä</div>
                    <h4>Keyword Optimization</h4>
                    <div 
                      className="analysis-score"
                      style={{ color: getScoreColor(result.analysis.keywordScore) }}
                    >
                      {result.analysis.keywordScore}%
                    </div>
                    <div className="analysis-details">
                      {result.analysis.details.keyword}
                    </div>
                  </div>
                  
                  <div className="analysis-card">
                    <div className="analysis-icon">üìè</div>
                    <h4>Length Optimization</h4>
                    <div 
                      className="analysis-score"
                      style={{ color: getScoreColor(result.analysis.lengthScore) }}
                    >
                      {result.analysis.lengthScore}%
                    </div>
                    <div className="analysis-details">
                      {result.analysis.details.length}
                    </div>
                  </div>
                  
                  <div className="analysis-card">
                    <div className="analysis-icon">üí°</div>
                    <h4>Engagement Potential</h4>
                    <div 
                      className="analysis-score"
                      style={{ color: getScoreColor(result.analysis.engagementScore) }}
                    >
                      {result.analysis.engagementScore}%
                    </div>
                    <div className="analysis-details">
                      {result.analysis.details.engagement}
                    </div>
                  </div>
                  
                  <div className="analysis-card">
                    <div className="analysis-icon">üîç</div>
                    <h4>Readability</h4>
                    <div 
                      className="analysis-score"
                      style={{ color: getScoreColor(result.analysis.readabilityScore) }}
                    >
                      {result.analysis.readabilityScore}%
                    </div>
                    <div className="analysis-details">
                      {result.analysis.details.readability}
                    </div>
                  </div>
                </div>
              </div>

              {/* Keyword Suggestions */}
              <div className="keyword-section">
                <h3 className="section-title">Keyword Suggestions</h3>
                <div className="keywords-grid">
                  {result.keywordSuggestions.map((keyword, index) => (
                    <div 
                      key={index}
                      className={`keyword-tag ${index === 0 ? 'primary' : ''}`}
                      onClick={() => {
                        setFormData(prev => ({ ...prev, primaryKeyword: keyword }));
                        showNotification(`Keyword "${keyword}" set as primary`);
                      }}
                    >
                      {keyword}
                    </div>
                  ))}
                </div>
              </div>

              {/* Actions */}
              <div className="actions-section">
                <button className="action-btn primary" onClick={copyMetaTags}>
                  <span>üìã</span> Copy Meta Tags
                </button>
                <button className="action-btn secondary" onClick={copyAllVariations}>
                  <span>üìÑ</span> Copy All Variations
                </button>
                <button className="action-btn secondary" onClick={handleSubmit}>
                  <span>üîÑ</span> Generate New
                </button>
              </div>
            </div>
          )}
        </section>
      </div>

      {/* Features Section */}
      <section className="features-section">
        <h2>Powerful SEO Features</h2>
        <div className="features-grid">
          <div className="feature-card">
            <div className="feature-icon">üéØ</div>
            <h3>Keyword-Optimized</h3>
            <p>Generate meta tags with perfect keyword placement and density for better rankings.</p>
          </div>
          <div className="feature-card">
            <div className="feature-icon">üì±</div>
            <h3>Mobile-First</h3>
            <p>Optimized for mobile search results with perfect character limits and formatting.</p>
          </div>
          <div className="feature-card">
            <div className="feature-icon">üöÄ</div>
            <h3>Click-Through Focused</h3>
            <p>Create compelling meta descriptions that drive clicks and improve CTR.</p>
          </div>
          <div className="feature-card">
            <div className="feature-icon">üìä</div>
            <h3>Performance Analytics</h3>
            <p>Get detailed analysis of your meta tags with improvement suggestions.</p>
          </div>
        </div>
      </section>

      {/* Best Practices Section */}
      <section className="best-practices-section">
        <h2>SEO Meta Tag Best Practices</h2>
        <div className="practices-grid">
          <div className="practice-card">
            <h3>‚úÖ Meta Title Best Practices</h3>
            <ul>
              <li><strong>Length:</strong> 50-60 characters</li>
              <li><strong>Keyword:</strong> Place primary keyword near the front</li>
              <li><strong>Branding:</strong> Include brand name at the end</li>
              <li><strong>Format:</strong> Use pipes (|) or hyphens (-) as separators</li>
              <li><strong>CTR:</strong> Include power words and numbers</li>
            </ul>
          </div>
          
          <div className="practice-card">
            <h3>‚úÖ Meta Description Best Practices</h3>
            <ul>
              <li><strong>Length:</strong> 120-155 characters</li>
              <li><strong>Keyword:</strong> Include primary and secondary keywords</li>
              <li><strong>Value Proposition:</strong> Clearly state the benefit</li>
              <li><strong>Call-to-Action:</strong> Encourage clicks with action words</li>
              <li><strong>Readability:</strong> Natural, compelling language</li>
            </ul>
          </div>
        </div>
      </section>
    </div>
  );
};

export default SEOMetaGenerator;
