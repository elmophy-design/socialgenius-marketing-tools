    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
}

.ad-url {
    color: #006621;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
}

.ad-description {
    color: var(--dark);
