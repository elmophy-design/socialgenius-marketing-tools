    list-style: none;
    padding: 0;
}

.strengths-list li, .improvements-list li {
    padding: 0.75rem 0;
    border-bottom: 1px solid #f8f9fa;
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
