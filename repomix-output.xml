import React, { useState } from 'react';
import './ContentIdeaGenerator.css';

const ContentIdeaGenerator = () => {
  // ============================================
  // STATE MANAGEMENT
  // ============================================
  const [formData, setFormData] = useState({
    niche: '',
    targetAudience: '',
    contentType: 'blog',
    contentFormat: 'how-to',
    tone: 'professional',
    ideaCount: '10',
    keywords: '',
    goal: 'education'
  });

  const [ideas, setIdeas] = useState([]);
  const [calendar, setCalendar] = useState([]);
  const [loading, setLoading] = useState(false);
  const [showResults, setShowResults] = useState(false);
  const [showCalendar, setShowCalendar] = useState(false);
  const [generationProgress, setGenerationProgress] = useState(0);

  // ============================================
  // CONFIGURATION DATA
  // ============================================
  const contentTypeConfigs = {
    blog: { name: 'Blog Posts', maxLength: 120 },
    'social-media': { name: 'Social Media Posts', maxLength: 280 },
    video: { name: 'Video Content', maxLength: 100 },
    podcast: { name: 'Podcast Episodes', maxLength: 80 },
    email: { name: 'Email Newsletter', maxLength: 100 },
    ebook: { name: 'E-book/Guide', maxLength: 60 }
  };

  const formatTemplates = {
    'how-to': {
      templates: [
        "How to [Achieve Goal] in [Timeframe]",
        "Step-by-Step Guide to [Action]",
        "The Complete Beginner's Guide to [Topic]",
        "How We [Achieved Result] in [Timeframe]"
      ],
      descriptions: [
        "A comprehensive guide that walks readers through achieving specific goals.",
        "Detailed instructions and best practices for completing tasks or projects."
      ]
    },
    'list': {
      templates: [
        "[Number] [Topic] Tips That Actually Work",
        "[Number] Common Mistakes to Avoid When [Action]",
        "[Number] Best [Tools/Resources] for [Audience]",
        "[Number] Signs You're [Situation]"
      ],
      descriptions: [
        "Actionable tips and insights presented in an easy-to-digest list format.",
        "Common pitfalls and how to avoid them in your niche or industry."
      ]
    },
    'tips': {
      templates: [
        "[Number] Proven Strategies for [Goal]",
        "Expert Tips for Better [Result]",
        "[Number] Little-Known [Topic] Secrets",
        "Quick Wins for [Improvement]"
      ],
      descriptions: [
        "Practical advice and strategies that deliver immediate results.",
        "Expert insights and proven methods for achieving specific outcomes."
      ]
    },
    'case-study': {
      templates: [
        "Case Study: How [Company] Achieved [Result]",
        "Real Results: [Metric] Improvement in [Timeframe]",
        "Success Story: [Client]'s Journey to [Achievement]"
      ],
      descriptions: [
        "Detailed analysis of real-world success stories and key takeaways.",
        "In-depth look at strategies that delivered measurable results."
      ]
    }
  };

  const toneTemplates = {
    professional: {
      adjectives: ['comprehensive', 'strategic', 'professional', 'effective', 'proven'],
      phrases: ['industry best practices', 'data-driven approach', 'expert insights']
    },
    casual: {
      adjectives: ['awesome', 'simple', 'easy', 'fun', 'practical'],
      phrases: ["you'll love this", 'game-changing tips', 'super helpful']
    },
    authoritative: {
      adjectives: ['definitive', 'comprehensive', 'expert', 'master', 'ultimate'],
      phrases: ['must-know strategies', 'industry secrets', 'professional guidance']
    },
    humorous: {
      adjectives: ['hilarious', 'entertaining', 'funny', 'witty', 'amusing'],
      phrases: ["you won't believe this", 'laugh while you learn', 'entertaining insights']
    },
    inspirational: {
      adjectives: ['transformative', 'life-changing', 'empowering', 'motivational', 'inspiring'],
      phrases: ['unlock your potential', 'transform your approach', 'achieve amazing results']
    }
  };

  const goalTemplates = {
    education: {
      focus: ['teach', 'educate', 'explain', 'demonstrate', 'guide'],
      outcomes: ['understanding', 'knowledge', 'skills', 'expertise']
    },
    entertainment: {
      focus: ['entertain', 'engage', 'amuse', 'delight', 'captivate'],
      outcomes: ['enjoyment', 'engagement', 'entertainment', 'fun']
    },
    conversion: {
      focus: ['convert', 'persuade', 'convince', 'motivate', 'inspire'],
      outcomes: ['action', 'conversion', 'purchase', 'sign-up']
    },
    awareness: {
      focus: ['introduce', 'showcase', 'highlight', 'feature', 'present'],
      outcomes: ['awareness', 'recognition', 'visibility', 'exposure']
    },
    engagement: {
      focus: ['engage', 'interact', 'connect', 'involve', 'participate'],
      outcomes: ['engagement', 'interaction', 'discussion', 'community']
    }
  };

  // ============================================
  // HELPER FUNCTIONS
  // ============================================
  const getRandomItem = (array) => array[Math.floor(Math.random() * array.length)];
  
  const getRandomNumber = () => {
    const numbers = [5, 7, 10, 15, 21, 25, 30];
    return numbers[Math.floor(Math.random() * numbers.length)];
  };

  const getRandomTimeframe = () => {
    const timeframes = ['30 Days', '1 Week', '24 Hours', '5 Simple Steps', '2024', 'This Year'];
    return getRandomItem(timeframes);
  };

  const generateTitle = (formatTemplate, toneTemplate, goalTemplate) => {
    const templates = formatTemplate.templates;
    const adjectives = toneTemplate.adjectives;
    const focusWords = goalTemplate.focus;
    const keywords = formData.keywords.split(',').map(k => k.trim()).filter(k => k);
    
    let template = getRandomItem(templates);
    
    template = template.replace('[Number]', getRandomNumber());
    template = template.replace('[Topic]', formData.niche);
    template = template.replace('[Action]', getRandomItem(focusWords));
    template = template.replace('[Goal]', getRandomItem(goalTemplate.outcomes));
    template = template.replace('[Audience]', formData.targetAudience);
    template = template.replace('[Timeframe]', getRandomTimeframe());
    template = template.replace('[Result]', getRandomItem(goalTemplate.outcomes));
    template = template.replace('[Improvement]', getRandomItem(goalTemplate.outcomes));
    
    if (Math.random() > 0.5 && adjectives.length > 0) {
      template = getRandomItem(adjectives) + ' ' + template;
    }
    
    if (keywords.length > 0 && Math.random() > 0.7) {
      template += ` (${getRandomItem(keywords)})`;
    }
    
    return template.charAt(0).toUpperCase() + template.slice(1);
  };

  const generateDescription = (formatTemplate, toneTemplate, goalTemplate) => {
    const descriptions = formatTemplate.descriptions;
    const phrases = toneTemplate.phrases;
    const focusWords = goalTemplate.focus;
    
    let description = getRandomItem(descriptions);
    
    description = description.replace('[Topic]', formData.niche.toLowerCase());
    description = description.replace('[audience]', formData.targetAudience.toLowerCase());
    
    if (Math.random() > 0.5 && phrases.length > 0) {
      description += ` ${getRandomItem(phrases)}.`;
    }
    
    description += ` Perfect for ${getRandomItem(focusWords)}ing ${getRandomItem(goalTemplate.outcomes)}.`;
    
    return description;
  };

  const generateTags = () => {
    const keywords = formData.keywords.split(',').map(k => k.trim()).filter(k => k);
    const baseTags = [formData.niche, formData.contentFormat];
    const additionalTags = keywords.slice(0, 3);
    const toneTag = formData.tone;
    
    return [...new Set([...baseTags, ...additionalTags, toneTag])].slice(0, 5);
  };

  const generateContentCalendar = (generatedIdeas) => {
    const today = new Date();
    const calendarItems = [];
    
    generatedIdeas.slice(0, 5).forEach((idea, index) => {
      const date = new Date(today);
      date.setDate(today.getDate() + (index * 2));
      
      calendarItems.push({
        date: date.toLocaleDateString('en-US', { 
          weekday: 'short', 
          month: 'short', 
          day: 'numeric' 
        }),
        idea: idea.title,
        type: idea.type
      });
    });
    
    return calendarItems;
  };

  // ============================================
  // EVENT HANDLERS
  // ============================================
  const handleInputChange = (e) => {
    const { name, value } = e.target;
    setFormData(prev => ({ ...prev, [name]: value }));
  };

  const handleSubmit = async (e) => {
    e.preventDefault();

    if (!formData.niche.trim()) {
      alert('Please enter your niche or industry');
      return;
    }

    if (!formData.targetAudience.trim()) {
      alert('Please describe your target audience');
      return;
    }

    setLoading(true);
    setShowResults(true);
    setIdeas([]);
    setGenerationProgress(0);

    // Scroll to results
    setTimeout(() => {
      document.getElementById('results-section')?.scrollIntoView({ behavior: 'smooth' });
    }, 100);

    await generateIdeasWithProgress();
  };

  const generateIdeasWithProgress = async () => {
    const ideaCount = parseInt(formData.ideaCount);
    const generatedIdeas = [];
    
    const config = contentTypeConfigs[formData.contentType];
    const formatTemplate = formatTemplates[formData.contentFormat] || formatTemplates['how-to'];
    const toneTemplate = toneTemplates[formData.tone];
    const goalTemplate = goalTemplates[formData.goal];

    for (let i = 0; i < ideaCount; i++) {
      const thinkingTime = 300 + Math.random() * 500;
      await new Promise(resolve => setTimeout(resolve, thinkingTime));
      
      const idea = {
        id: i + 1,
        title: generateTitle(formatTemplate, toneTemplate, goalTemplate),
        description: generateDescription(formatTemplate, toneTemplate, goalTemplate),
        type: config.name,
        format: formData.contentFormat,
        tags: generateTags()
      };
      
      generatedIdeas.push(idea);
      setIdeas(prev => [...prev, idea]);
      setGenerationProgress(((i + 1) / ideaCount) * 100);
    }

    const calendarItems = generateContentCalendar(generatedIdeas);
    setCalendar(calendarItems);
    setLoading(false);
    
    showNotification('üéâ All ideas generated! Ready to copy or save.');
  };

  const copyToClipboard = (text) => {
    navigator.clipboard.writeText(text).then(() => {
      showNotification('Copied to clipboard!');
    }).catch(() => {
      showNotification('Failed to copy');
    });
  };

  const saveAllIdeas = () => {
    const allIdeas = ideas.map(idea => 
      `${idea.title}\n${idea.description}\nTags: ${idea.tags.join(', ')}\n\n`
    ).join('---\n\n');
    
    copyToClipboard(allIdeas);
    showNotification('All ideas copied to clipboard!');
  };

  const showNotification = (message) => {
    const notification = document.createElement('div');
    notification.className = 'notification-toast';
    notification.textContent = message;
    document.body.appendChild(notification);
    
    setTimeout(() => {
      notification.remove();
    }, 3000);
  };

  // ============================================
  // RENDER
  // ============================================
  return (
    <div className="content-idea-container">
      <header className="content-idea-header">
        <div className="logo">
          <span className="logo-icon">üí°</span>
          <span>Content Idea Generator</span>
        </div>
      </header>

      <div className="hero">
        <h1>AI-Powered Content Idea Generator</h1>
        <p>Never run out of content ideas again. Generate blog topics, social media posts, video ideas, and more in seconds.</p>
      </div>

      <div className="main-content">
        <section className="input-section">
          <h2>Generate Content Ideas</h2>
          
          <form onSubmit={handleSubmit}>
            <div className="form-group">
              <label htmlFor="niche">Your Niche/Industry</label>
              <input
                type="text"
                id="niche"
                name="niche"
                className="form-input"
                placeholder="e.g., Digital Marketing, Fitness, Cooking"
                value={formData.niche}
                onChange={handleInputChange}
                required
              />
            </div>

            <div className="form-group">
              <label htmlFor="targetAudience">Target Audience</label>
              <input
                type="text"
                id="targetAudience"
                name="targetAudience"
                className="form-input"
                placeholder="e.g., Small Business Owners, Fitness Enthusiasts"
                value={formData.targetAudience}
                onChange={handleInputChange}
                required
              />
            </div>

            <div className="form-grid">
              <div className="form-group">
                <label htmlFor="contentType">Content Type</label>
                <select
                  id="contentType"
                  name="contentType"
                  className="form-select"
                  value={formData.contentType}
                  onChange={handleInputChange}
                >
                  <option value="blog">Blog Posts</option>
                  <option value="social-media">Social Media</option>
                  <option value="video">Video Content</option>
                  <option value="podcast">Podcast Episodes</option>
                  <option value="email">Email Newsletter</option>
                  <option value="ebook">E-book/Guide</option>
                </select>
              </div>

              <div className="form-group">
                <label htmlFor="contentFormat">Content Format</label>
                <select
                  id="contentFormat"
                  name="contentFormat"
                  className="form-select"
                  value={formData.contentFormat}
                  onChange={handleInputChange}
                >
                  <option value="how-to">How-to Guides</option>
                  <option value="list">Listicles</option>
                  <option value="tips">Tips & Tricks</option>
                  <option value="case-study">Case Studies</option>
                </select>
              </div>

              <div className="form-group">
                <label htmlFor="tone">Tone of Voice</label>
                <select
                  id="tone"
                  name="tone"
                  className="form-select"
                  value={formData.tone}
                  onChange={handleInputChange}
                >
                  <option value="professional">Professional</option>
                  <option value="casual">Casual/Friendly</option>
                  <option value="authoritative">Authoritative</option>
                  <option value="humorous">Humorous</option>
                  <option value="inspirational">Inspirational</option>
                </select>
              </div>

              <div className="form-group">
                <label htmlFor="ideaCount">Number of Ideas</label>
                <select
                  id="ideaCount"
                  name="ideaCount"
                  className="form-select"
                  value={formData.ideaCount}
                  onChange={handleInputChange}
                >
                  <option value="5">5 Ideas</option>
                  <option value="10">10 Ideas</option>
                  <option value="15">15 Ideas</option>
                  <option value="20">20 Ideas</option>
                </select>
              </div>
            </div>

            <div className="form-group">
              <label htmlFor="keywords">Keywords/Topics</label>
              <input
                type="text"
                id="keywords"
                name="keywords"
                className="form-input"
                placeholder="e.g., SEO, content marketing, social media strategy"
                value={formData.keywords}
                onChange={handleInputChange}
              />
              <small className="input-hint">Separate with commas</small>
            </div>

            <div className="form-group">
              <label htmlFor="goal">Content Goal</label>
              <select
                id="goal"
                name="goal"
                className="form-select"
                value={formData.goal}
                onChange={handleInputChange}
              >
                <option value="education">Educate Audience</option>
                <option value="entertainment">Entertain</option>
                <option value="conversion">Drive Conversions</option>
                <option value="awareness">Brand Awareness</option>
                <option value="engagement">Increase Engagement</option>
              </select>
            </div>

            <button type="submit" className="generate-btn" disabled={loading}>
              {loading ? 'Generating Ideas...' : 'Generate Ideas'}
            </button>
          </form>
        </section>

        <section className="results-section" id="results-section">
          <h2>Content Ideas</h2>
          
          {!showResults && !loading && (
            <div className="results-placeholder">
              <div className="placeholder-icon">‚ú®</div>
              <h3>Your content ideas will appear here</h3>
              <p>Fill out the form and click "Generate Ideas" to get creative content suggestions</p>
            </div>
          )}

          {loading && (
            <div className="loading-indicator">
              <div className="spinner"></div>
              <p>AI is brainstorming creative ideas for you...</p>
              <div className="progress-bar">
                <div className="progress-fill" style={{ width: `${generationProgress}%` }}></div>
              </div>
              <p className="progress-text">Generated {Math.floor(generationProgress / (100 / parseInt(formData.ideaCount)))} of {formData.ideaCount} ideas</p>
            </div>
          )}

          {showResults && ideas.length > 0 && (
            <div className="results-content">
              <div className="results-header">
                <div className="results-badge">{contentTypeConfigs[formData.contentType].name}</div>
                <div className="results-count">{ideas.length} ideas generated</div>
              </div>

              <div className="ideas-grid">
                {ideas.map((idea, index) => (
                  <div
                    key={idea.id}
                    className="idea-card"
                    onClick={() => copyToClipboard(`${idea.title}\n\n${idea.description}\n\nTags: ${idea.tags.join(', ')}`)}
                  >
                    <div className="idea-header">
                      <div className="idea-type">{idea.format}</div>
                      <div className="idea-number">#{idea.id}</div>
                    </div>
                    <div className="idea-title">{idea.title}</div>
                    <div className="idea-description">{idea.description}</div>
                    <div className="idea-meta">
                      {idea.tags.map((tag, tagIndex) => (
                        <span key={tagIndex} className="meta-tag">{tag}</span>
                      ))}
                    </div>
                  </div>
                ))}
              </div>

              {showCalendar && calendar.length > 0 && (
                <div className="content-calendar">
                  <h3>Content Calendar Suggestions</h3>
                  <div className="calendar-grid">
                    {calendar.map((item, index) => (
                      <div key={index} className="calendar-item">
                        <div className="calendar-date">{item.date}</div>
                        <div className="calendar-idea">{item.idea}</div>
                      </div>
                    ))}
                  </div>
                </div>
              )}

              <div className="actions-section">
                <button className="action-btn" onClick={saveAllIdeas}>
                  <span>üíæ</span> Save All Ideas
                </button>
                <button className="action-btn secondary" onClick={handleSubmit}>
                  <span>üîÑ</span> Generate More
                </button>
                <button className="action-btn secondary" onClick={() => setShowCalendar(!showCalendar)}>
                  <span>üìÖ</span> {showCalendar ? 'Hide' : 'Show'} Calendar
                </button>
              </div>
            </div>
          )}
        </section>
      </div>
    </div>
  );
};

export default ContentIdeaGenerator;
