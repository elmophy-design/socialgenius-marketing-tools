import React, { useState } from 'react';
import './ValueProposition.css';

const ValueProposition = () => {
  // ============================================
  // STATE MANAGEMENT
  // ============================================
  const [formData, setFormData] = useState({
    brand: '',
    industry: '',
    audience: '',
    goal: '',
    strength: ''
  });

  const [errors, setErrors] = useState({
    brand: '',
    industry: '',
    audience: '',
    goal: '',
    strength: ''
  });

  const [result, setResult] = useState('');
  const [email, setEmail] = useState('');
  const [loading, setLoading] = useState(false);
  const [emailLoading, setEmailLoading] = useState(false);
  const [showResult, setShowResult] = useState(false);
  const [copySuccess, setCopySuccess] = useState(false);
  const [errorMessage, setErrorMessage] = useState('');
  const [successMessage, setSuccessMessage] = useState('');

  // ============================================
  // DROPDOWN OPTIONS DATA
  // ============================================
  const industries = [
    { value: 'technology', label: 'Technology' },
    { value: 'healthcare', label: 'Healthcare' },
    { value: 'retail', label: 'Retail' },
    { value: 'education', label: 'Education' },
    { value: 'finance', label: 'Finance & Banking' },
    { value: 'real-estate', label: 'Real Estate' },
    { value: 'hospitality', label: 'Hospitality & Tourism' },
    { value: 'manufacturing', label: 'Manufacturing' },
    { value: 'consulting', label: 'Consulting' },
    { value: 'non-profit', label: 'Non-Profit' },
    { value: 'ecommerce', label: 'E-commerce' },
    { value: 'automotive', label: 'Automotive' },
    { value: 'energy', label: 'Energy & Utilities' },
    { value: 'media', label: 'Media & Entertainment' },
    { value: 'construction', label: 'Construction' }
  ];

  const audiences = [
    { value: 'small-businesses', label: 'Small Businesses' },
    { value: 'startups', label: 'Startups' },
    { value: 'freelancers', label: 'Freelancers' },
    { value: 'enterprises', label: 'Enterprises' },
    { value: 'millennials', label: 'Millennials' },
    { value: 'gen-z', label: 'Gen Z' },
    { value: 'seniors', label: 'Seniors' },
    { value: 'parents', label: 'Parents' },
    { value: 'students', label: 'Students' },
    { value: 'professionals', label: 'Professionals' },
    { value: 'healthcare-providers', label: 'Healthcare Providers' },
    { value: 'educators', label: 'Educators' },
    { value: 'creators', label: 'Content Creators' },
    { value: 'investors', label: 'Investors' },
    { value: 'non-profit-organizations', label: 'Non-Profit Organizations' }
  ];

  const goals = [
    { value: 'increase-sales', label: 'Increase Sales' },
    { value: 'improve-efficiency', label: 'Improve Efficiency' },
    { value: 'boost-engagement', label: 'Boost Engagement' },
    { value: 'reduce-costs', label: 'Reduce Costs' },
    { value: 'enhance-brand-awareness', label: 'Enhance Brand Awareness' },
    { value: 'generate-leads', label: 'Generate Leads' },
    { value: 'improve-customer-retention', label: 'Improve Customer Retention' },
    { value: 'expand-market-reach', label: 'Expand Market Reach' },
    { value: 'launch-new-product', label: 'Launch New Product' },
    { value: 'optimize-operations', label: 'Optimize Operations' },
    { value: 'increase-web-traffic', label: 'Increase Web Traffic' },
    { value: 'improve-customer-service', label: 'Improve Customer Service' },
    { value: 'build-community', label: 'Build Community' },
    { value: 'establish-thought-leadership', label: 'Establish Thought Leadership' }
  ];

  const strengths = [
    { value: 'innovative-solutions', label: 'Innovative Solutions' },
    { value: 'expert-support', label: 'Expert Support' },
    { value: 'user-friendly-tools', label: 'User-Friendly Tools' },
    { value: 'cost-effective-strategies', label: 'Cost-Effective Strategies' },
    { value: 'proven-methodology', label: 'Proven Methodology' },
    { value: 'cutting-edge-technology', label: 'Cutting-Edge Technology' },
    { value: 'personalized-approach', label: 'Personalized Approach' },
    { value: 'data-driven-insights', label: 'Data-Driven Insights' },
    { value: 'industry-expertise', label: 'Industry Expertise' },
    { value: 'seamless-integration', label: 'Seamless Integration' },
    { value: 'scalable-solutions', label: 'Scalable Solutions' },
    { value: 'quick-implementation', label: 'Quick Implementation' },
    { value: 'comprehensive-support', label: 'Comprehensive Support' },
    { value: 'competitive-pricing', label: 'Competitive Pricing' }
  ];

  // ============================================
  // HELPER FUNCTIONS
  // ============================================
  const chooseConnector = (goal) => {
    const verbLike = ['increase', 'grow', 'boost', 'expand', 'improve', 'enhance', 'generate', 'optimize'];
    const firstWord = goal.split('-')[0].toLowerCase();
    return verbLike.includes(firstWord) ? 'to' : 'achieve';
  };

  const clearMessages = () => {
    setErrorMessage('');
    setSuccessMessage('');
  };

  const validateField = (name, value) => {
    if (!value || value.trim() === '') {
      setErrors(prev => ({
        ...prev,
        [name]: 'This field is required'
      }));
      return false;
    } else {
      setErrors(prev => ({
        ...prev,
        [name]: ''
      }));
      return true;
    }
  };

  // ============================================
  // EVENT HANDLERS
  // ============================================
  const handleInputChange = (e) => {
    const { name, value } = e.target;
    setFormData(prev => ({
      ...prev,
      [name]: value
    }));
    
    // Clear error for this field when user starts typing
    if (errors[name]) {
      validateField(name, value);
    }
  };

  const handleBlur = (e) => {
    const { name, value } = e.target;
    validateField(name, value);
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    clearMessages();

    // Validate all fields
    const isBrandValid = validateField('brand', formData.brand);
    const isIndustryValid = validateField('industry', formData.industry);
    const isAudienceValid = validateField('audience', formData.audience);
    const isGoalValid = validateField('goal', formData.goal);
    const isStrengthValid = validateField('strength', formData.strength);

    if (!isBrandValid || !isIndustryValid || !isAudienceValid || !isGoalValid || !isStrengthValid) {
      setErrorMessage('Please fix the errors in the form before submitting.');
      return;
    }

    setLoading(true);

    try {
      // Call backend API
      const response = await fetch('http://localhost:4000/api/value-prop/generate', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${localStorage.getItem('token') || ''}`
        },
        body: JSON.stringify({
          businessName: formData.brand,
          targetAudience: formData.audience.replace(/-/g, ' '),
          problem: formData.goal.replace(/-/g, ' '),
          solution: formData.strength.replace(/-/g, ' '),
          uniqueValue: formData.industry.replace(/-/g, ' '),
          userId: localStorage.getItem('userId') || 'anonymous'
        })
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || 'Failed to generate value proposition');
      }

      // Use backend result or generate locally as fallback
      let valueProposition;
      if (data.success && data.data && data.data.variations && data.data.variations.length > 0) {
        valueProposition = data.data.variations[0].text;
      } else {
        // Fallback to local generation
        const connector = chooseConnector(formData.goal);
        const cleanGoal = formData.goal.replace(/-/g, ' ');
        const cleanAudience = formData.audience.replace(/-/g, ' ');
        const cleanStrength = formData.strength.replace(/-/g, ' ');
        const cleanIndustry = formData.industry.replace(/-/g, ' ');
        valueProposition = `${formData.brand} helps ${cleanAudience} in the ${cleanIndustry} industry ${connector} ${cleanGoal} through ${cleanStrength}.`;
      }

      setResult(valueProposition);
      setShowResult(true);

      // Scroll to result
      setTimeout(() => {
        document.getElementById('lead-magnet')?.scrollIntoView({ behavior: 'smooth' });
      }, 100);

    } catch (error) {
      console.error('Error generating value proposition:', error);
      setErrorMessage(error.message || 'Something went wrong. Please try again later.');
      
      // Fallback to local generation on error
      const connector = chooseConnector(formData.goal);
      const cleanGoal = formData.goal.replace(/-/g, ' ');
      const cleanAudience = formData.audience.replace(/-/g, ' ');
      const cleanStrength = formData.strength.replace(/-/g, ' ');
      const cleanIndustry = formData.industry.replace(/-/g, ' ');
      const localResult = `${formData.brand} helps ${cleanAudience} in the ${cleanIndustry} industry ${connector} ${cleanGoal} through ${cleanStrength}.`;
      
      setResult(localResult);
      setShowResult(true);
    } finally {
      setLoading(false);
    }
  };

  const handleEmailSubmit = async (e) => {
    e.preventDefault();
    clearMessages();

    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!email || !emailRegex.test(email)) {
      setErrorMessage('Please enter a valid email address.');
      return;
    }

    setEmailLoading(true);

    try {
      const response = await fetch('http://localhost:4000/api/value-prop/send-email', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          email: email,
          brand: formData.brand,
          valueProp: result
        })
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.error || 'Failed to send email');
      }

      setSuccessMessage(`Thanks, ${email}! Your free marketing guide is on its way üöÄ`);
      setEmail('');
    } catch (error) {
      console.error('Error sending email:', error);
      setErrorMessage(error.message || 'Something went wrong. Please try again later.');
    } finally {
      setEmailLoading(false);
    }
  };

  const handleCopy = async () => {
    if (!result) {
      setErrorMessage('There is no text to copy yet!');
      return;
    }

    clearMessages();

    try {
      // Modern clipboard API
      if (navigator.clipboard && window.isSecureContext) {
        await navigator.clipboard.writeText(result);
      } else {
        // Fallback for older browsers
        const textarea = document.createElement('textarea');
        textarea.value = result;
        textarea.style.position = 'fixed';
        textarea.style.opacity = '0';
        document.body.appendChild(textarea);
        textarea.select();
        document.execCommand('copy');
        document.body.removeChild(textarea);
      }

      setCopySuccess(true);
      setTimeout(() => setCopySuccess(false), 2000);
    } catch (error) {
      console.error('Copy failed:', error);
      setErrorMessage('Failed to copy. Please try again manually.');
    }
  };

  // ============================================
  // RENDER
  // ============================================
  return (
    <div className="value-prop-container">
      <header className="value-prop-header">
        <h1>Value Proposition Generator</h1>
        <p>Create a compelling value proposition for your business</p>
      </header>

      <form onSubmit={handleSubmit} className="value-prop-form">
        {/* Brand Name */}
        <div className="field-group">
          <label htmlFor="brand">Brand Name</label>
          <input
            id="brand"
            name="brand"
            type="text"
            placeholder="e.g., Meritlives LLC"
            value={formData.brand}
            onChange={handleInputChange}
            onBlur={handleBlur}
            className={errors.brand ? 'field-error' : ''}
            required
          />
          {errors.brand && <div className="error-text">{errors.brand}</div>}
        </div>

        {/* Industry */}
        <div className="field-group">
          <label htmlFor="industry">Industry</label>
          <select
            id="industry"
            name="industry"
            value={formData.industry}
            onChange={handleInputChange}
            onBlur={handleBlur}
            className={errors.industry ? 'field-error' : ''}
            required
          >
            <option value="">Select an industry</option>
            {industries.map(ind => (
              <option key={ind.value} value={ind.value}>{ind.label}</option>
            ))}
          </select>
          {errors.industry && <div className="error-text">{errors.industry}</div>}
        </div>

        {/* Target Audience */}
        <div className="field-group">
          <label htmlFor="audience">Target Audience</label>
          <select
            id="audience"
            name="audience"
            value={formData.audience}
            onChange={handleInputChange}
            onBlur={handleBlur}
            className={errors.audience ? 'field-error' : ''}
            required
          >
            <option value="">Select an audience</option>
            {audiences.map(aud => (
              <option key={aud.value} value={aud.value}>{aud.label}</option>
            ))}
          </select>
          {errors.audience && <div className="error-text">{errors.audience}</div>}
        </div>

        {/* Goal */}
        <div className="field-group">
          <label htmlFor="goal">Goal</label>
          <select
            id="goal"
            name="goal"
            value={formData.goal}
            onChange={handleInputChange}
            onBlur={handleBlur}
            className={errors.goal ? 'field-error' : ''}
            required
          >
            <option value="">Select a goal</option>
            {goals.map(g => (
              <option key={g.value} value={g.value}>{g.label}</option>
            ))}
          </select>
          {errors.goal && <div className="error-text">{errors.goal}</div>}
        </div>

        {/* Strength */}
        <div className="field-group">
          <label htmlFor="strength">Strength</label>
          <select
            id="strength"
            name="strength"
            value={formData.strength}
            onChange={handleInputChange}
            onBlur={handleBlur}
            className={errors.strength ? 'field-error' : ''}
            required
          >
            <option value="">Select a strength</option>
            {strengths.map(str => (
              <option key={str.value} value={str.value}>{str.label}</option>
            ))}
          </select>
          {errors.strength && <div className="error-text">{errors.strength}</div>}
        </div>

        <button type="submit" disabled={loading} className={loading ? 'loading' : ''}>
          {loading ? 'Generating...' : 'Generate Value Proposition'}
        </button>
      </form>

      {/* Result Section */}
      {showResult && (
        <div id="lead-magnet" className="lead-magnet visible">
          <h2>Your Value Proposition</h2>
          <div className="result-box">
            <p className="result-text">{result}</p>
            <button 
              onClick={handleCopy} 
              className={`copy-btn ${copySuccess ? 'copied' : ''}`}
            >
              {copySuccess ? 'Copied!' : 'Copy Text'}
            </button>
          </div>

          {/* Email Lead Form */}
          <form onSubmit={handleEmailSubmit} className="lead-form">
            <input
              type="email"
              placeholder="Enter your email for a free guide"
              value={email}
              onChange={(e) => setEmail(e.target.value)}
              required
            />
            <button type="submit" disabled={emailLoading} className={emailLoading ? 'loading' : ''}>
              {emailLoading ? 'Sending...' : 'Get Free Guide'}
            </button>
          </form>
        </div>
      )}

      {/* Messages */}
      {errorMessage && (
        <div className="error-message" role="alert">
          {errorMessage}
        </div>
      )}

      {successMessage && (
        <div className="success-message" role="status">
          {successMessage}
        </div>
      )}
    </div>
  );
};

export default ValueProposition;
