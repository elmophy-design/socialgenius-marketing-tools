    }

    .quick-actions {
        grid-template-columns: repeat(2, 1fr);
    }
}

/* ============================================
   UTILITY CLASSES
   ============================================ */
.hidden {
    display: none !important;
}

/* Smooth scrolling */
html {
    scroll-behavior: smooth;
}
