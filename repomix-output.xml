}

.example-platform {
    color: var(--primary);
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
}

.example-title {
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #1A0DAB;
}

.example-url {
    color: #006621;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
}

.example-desc {
    color: var(--dark);
    line-height: 1.5;
    margin-bottom: 0.5rem;
}

.example-cta {
    color: var(--primary);
    font-weight: 600;
}

/* Footer */
