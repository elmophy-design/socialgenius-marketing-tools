    background: #f8f9fa;
    padding: 0.4rem 0.8rem;
    border-radius: 15px;
    font-size: 0.8rem;
    color: #666;
    display: flex;
    align-items: center;
    gap: 0.3rem;
}

.tool-stats {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #e9ecef;
}

.usage-count {
    font-size: 0.9rem;
    color: #666;
    display: flex;
    align-items: center;
    gap: 0.3rem;
}

.rating {
    display: flex;
    align-items: center;
    gap: 0.2rem;
    color: #ffc107;
}

.tool-badge {
    display: inline-block;
    background: #28a745;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    margin-top: 1rem;
}

.tool-badge.coming-soon {
    background: #6c757d;
}

