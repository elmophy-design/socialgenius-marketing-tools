function SocialMediaGenerator() {
  const navigate = useNavigate();
  const [userData, setUserData] = useState(INITIAL_USER_DATA);
  const [formData, setFormData] = useState(INITIAL_FORM_DATA);
  const [connectedAccounts, setConnectedAccounts] = useState([]);
  const [generatedPosts, setGeneratedPosts] = useState([]);
  const [isLoading, setIsLoading] = useState(false);
  const [modalVisible, setModalVisible] = useState({
    profile: false,
    subscription: false,
    settings: false,
    quickPost: false,
    analytics: false,
  });

  const isPremium = userData.plan === 'Premium' || userData.plan === 'Pro';
  const maxPosts = isPremium ? MAX_POSTS_PREMIUM : MAX_POSTS_TRIAL;
  const connectedCount = connectedAccounts.filter((a) => a.isConnected).length;

  // --- Side Effects & Setup ---
  useEffect(() => {
    setConnectedAccounts(
      PLATFORMS.map((p) => ({
        ...p,
        isConnected:
          p.name === 'Facebook' && !isPremium
            ? true
            : isPremium && p.name !== 'TikTok'
            ? true
            : false,
      }))
    );
    setUserData((prev) => ({ ...prev, connectedCount: connectedCount }));

    if (generatedPosts.length === 0) {
      setGeneratedPosts(generateMockPosts(3, true));
    }
   
  }, [userData.plan]);

  // --- Handlers ---
  const handleFormChange = (e) => {
    const { id, value } = e.target;
    if (id === 'postQuantity') {
      setFormData((prev) => ({ ...prev, [id]: parseInt(value) }));
    } else if (id === 'autoPostToggle') {
      setFormData((prev) => ({ ...prev, autoPost: e.target.checked }));
    } else if (id === 'nicheSelect' && value !== 'custom') {
      setFormData((prev) => ({ ...prev, niche: value, customNiche: '' }));
    } else if (id === 'customNicheInput') {
      setFormData((prev) => ({ ...prev, customNiche: value }));
    } else {
      setFormData((prev) => ({ ...prev, [id]: value }));
    }
  };

  const handleInterestChange = (interest) => {
    setFormData((prev) => {
      const currentInterests = prev.interests;
      if (currentInterests.includes(interest)) {
        return { ...prev, interests: currentInterests.filter((i) => i !== interest) };
      } else {
        return { ...prev, interests: [...currentInterests, interest] };
      }
    });
  };

  // Core Generation Logic
  const handleGenerateContent = async () => {
    if (!isPremium && formData.postQuantity > MAX_POSTS_TRIAL) {
      alert(`Trial limit: You can only generate up to ${MAX_POSTS_TRIAL} posts.`);
      return;
    }

    setIsLoading(true);
    try {
      const dataToSend = {
        ...formData,
        isPremium: isPremium,
        niche: formData.niche === 'custom' ? formData.customNiche : formData.niche,
        connectedPlatforms: connectedAccounts.filter(a => a.isConnected).map(a => a.name),
      };

      await toolsApi.generateSocialMediaContent(dataToSend);

      // Mock posts
      setGeneratedPosts(generateMockPosts(formData.postQuantity, isPremium));
    } catch (e) {
      alert('Failed to generate content. Please check server or subscription.');
    } finally {
      setIsLoading(false);
    }
  };

  // Mock post generator
  const generateMockPosts = (count, premium) => {
    const posts = [];
    const copyOptions = [
      "üöÄ Achieve peak performance with our new Enterprise Analytics Suite! See real-time data flow and make decisions faster than ever. #Tech #Analytics",
      "üí° How We Boosted Client ROI by 350% in 90 Days. It starts with structured data‚Äîfind out how on our latest blog. #MarketingTips",
      "üö® LIMITED TIME OFFER: Get your free 7-day trial of the full SocialGenius platform! Connect all 5 accounts now. Click the link in bio!",
      "‚ú® Stop guessing, start growing! Our AI takes the guesswork out of content creation. Tag a friend who needs this automation! #AI #Growth",
    ];
    for (let i = 0; i < count; i++) {
      posts.push({
        id: i,
        platform: PLATFORMS[i % PLATFORMS.length].name,
        copy: copyOptions[i % copyOptions.length],
        hashtags: ['#SocialGenius', '#AI', '#Content'],
        imageUrl: `https://placehold.co/400x300/1220eb/ffffff?text=Post+Visual+${i + 1}`,
        isPremium: premium && i > 3 ? true : false,
      });
    }
    return posts;
  };

  // Modals
  const renderModals = () => {
    if (modalVisible.profile)
      return (
        <ProfileModal
          data={userData}
          onClose={() => setModalVisible({ ...modalVisible, profile: false })}
          navigate={navigate}
        />
      );
    if (modalVisible.subscription)
      return (
        <SubscriptionModal
          isPremium={isPremium}
          onClose={() => setModalVisible({ ...modalVisible, subscription: false })}
        />
      );
    return null;
  };

  // --- RENDER ---
  return (
    <div className="bg-gray-50 text-gray-800 min-h-screen flex flex-col">
      {/* Header */}
      <header className="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-4 shadow-lg">
        <div className="max-w-7xl mx-auto px-4 flex justify-between items-center">
          <div className="flex items-center space-x-3">
            <i className="fas fa-robot text-2xl"></i>
            <div>
              <h1 className="text-xl font-bold">SocialGenius Dashboard</h1>
              <p className="text-xs opacity-90">{userData.plan} User</p>
            </div>
          </div>

          <div className="flex items-center space-x-4">
            <button
              onClick={() => setModalVisible({ ...modalVisible, profile: true })}
              className="flex items-center space-x-2 bg-blue-500 px-3 py-1 rounded-full hover:bg-blue-400 transition text-white"
            >
              <div className="profile-picture-placeholder">
                <span>{userData.userName.charAt(0)}</span>
              </div>
              <span id="userName">{userData.userName}</span>
              <i className="fas fa-chevron-down text-xs"></i>
            </button>
          </div>
        </div>
      </header>

      <main className="flex-grow max-w-7xl mx-auto py-8 px-4 w-full">
        {/* Dashboard Stats */}
        <section className="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
          <StatCard title="Connected Accounts" value={connectedCount} icon="fa-link" borderColor="blue-500" iconColor="blue-500" />
          <StatCard title="Posts This Month" value={userData.postsCount} icon="fa-chart-bar" borderColor="green-500" iconColor="green-500" />
          <StatCard title="Engagement Rate" value={`${userData.engagementRate}%`} icon="fa-heart" borderColor="purple-500" iconColor="purple-500" />
          <StatCard title="Scheduled Posts" value={userData.scheduledCount} icon="fa-calendar" borderColor="orange-500" iconColor="orange-500" />
        </section>

        <div className="grid grid-cols-1 lg:grid-cols-3 gap-8">
          {/* Left Column */}
          <div className="lg:col-span-2 space-y-6">
            {/* Social Connections */}
            <section id="socialConnections" className="bg-white p-6 rounded-2xl shadow-md">
              <h2 className="text-xl font-semibold mb-4">Connected Social Accounts</h2>
              <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                {PLATFORMS.map((p) => (
                  <ConnectionCard
                    key={p.name}
                    platform={p}
                    isConnected={
                      connectedAccounts.find((a) => a.name === p.name)?.isConnected || false
                    }
                    isPremium={isPremium}
                  />
                ))}
              </div>

              <div className="mt-6 p-4 bg-gradient-to-r from-blue-50 to-purple-50 rounded-lg border border-blue-200">
                <div className="flex items-center justify-between">
                  <p className="text-sm text-blue-600">
                    {isPremium
                      ? 'You have access to all platforms.'
                      : `Trial users limited to Facebook. Upgrade for ${PLATFORMS.length - 1} more!`}
                  </p>
                  {!isPremium && (
                    <button
                      onClick={() =>
                        setModalVisible({ ...modalVisible, subscription: true })
                      }
                      className="bg-purple-600 text-white text-sm px-3 py-1 rounded-full hover:bg-purple-700 transition"
                    >
                      Upgrade Now
                    </button>
                  )}
                </div>
              </div>
            </section>

            {/* Content Generator */}
            <section id="contentGenerator" className="bg-white p-6 rounded-2xl shadow-md">
              <h2 className="text-xl font-semibold mb-4">AI Content Generator</h2>

              <div className="space-y-4">
                {/* Niche Selection */}
                <div>
                  <label className="block font-medium mb-2">Your Niche/Industry</label>
                  <select
                    id="nicheSelect"
                    className="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-blue-500"
                    value={formData.niche}
                    onChange={handleFormChange}
                  >
                    <option value="">Select your niche...</option>
                    <option value="technology">Technology & SaaS</option>
                    <option value="fashion">Fashion & Beauty</option>
                    <option value="marketing">Marketing & Agency</option>
                    <option value="education">Education & Coaching</option>
                    <option value="health">Health & Fitness</option>
                    <option value="custom">Custom Niche</option>
                  </select>

                  {formData.niche === 'custom' && (
                    <div className="mt-2">
                      <input
                        type="text"
                        id="customNicheInput"
                        placeholder="Describe your niche..."
                        value={formData.customNiche}
                        onChange={handleFormChange}
                        className="w-full border border-gray-300 rounded-lg p-3 focus:ring-2 focus:ring-blue-500"
                      />
                    </div>
                  )}
                </div>

                {/* Target Audience */}
                <div>
                  <label className="block font-medium mb-2">Target Audience</label>
                  <div className="grid grid-cols-2 gap-2" id="interestsContainer">
                    {[
                      'technology',
                      'marketing',
                      'business',
                      'lifestyle',
                      'education',
                      'entertainment',
                      'health',
                      'travel',
                    ].map((interest) => (
                      <InterestCheckbox
                        key={interest}
                        interest={interest}
                        isChecked={formData.interests.includes(interest)}
                        onChange={() => handleInterestChange(interest)}
                      />
                    ))}
                  </div>
                </div>

                {/* Post Quantity */}
                <div>
                  <label className="block font-medium mb-2">
                    Number of Posts to Generate (Max: {maxPosts})
                  </label>
                  <div className="flex items-center space-x-4">
                    <input
                      type="range"
                      id="postQuantity"
                      min="1"
                      max={maxPosts}
                      value={formData.postQuantity}
                      onChange={handleFormChange}
                      className="flex-grow"
                    />
                    <span id="quantityValue" className="font-medium w-8 text-center">
                      {formData.postQuantity}
                    </span>
                  </div>
                </div>

                {/* Auto-Post Toggle */}
                <div
                  className={`flex items-center justify-between p-4 rounded-lg transition ${
                    isPremium ? 'bg-blue-50' : 'bg-red-50 opacity-60'
                  }`}
                >
                  <div>
                    <h3 className="font-medium">
                      {isPremium ? 'Auto-Post Enabled' : 'Auto-Post (Premium Feature)'}
                    </h3>
                    <p className="text-sm text-gray-600">
                      Automatically publish generated content
                    </p>
                  </div>
                  <label className="relative inline-flex items-center cursor-pointer">
                    <input
                      type="checkbox"
                      id="autoPostToggle"
                      className="sr-only peer"
                      checked={formData.autoPost}
                      onChange={handleFormChange}
                      disabled={!isPremium}
                    />
                    <div
                      className={`w-11 h-6 bg-gray-200 peer-focus:ring-4 rounded-full peer peer-checked:after:translate-x-full after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all ${
                        isPremium
                          ? 'peer-checked:bg-blue-600 peer-focus:ring-blue-300'
                          : 'bg-gray-400'
                      }`}
                    ></div>
                  </label>
                </div>

                {/* Generate Button Row */}
