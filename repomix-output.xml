import React, { useState, useEffect } from 'react';
import { toolsApi } from '../../api/toolsApi';
import { Link, useNavigate } from 'react-router-dom';

// ‚úÖ NEW: import CSS module
import styles from './SocialMediaGenerator.module.css';

const MAX_POSTS_PREMIUM = 10;
const MAX_POSTS_TRIAL = 3;

// --- DUMMY DATA / CONFIGURATION ---
const INITIAL_USER_DATA = {
  userName: 'Marketing Pro',
  userEmail: 'user@socialgenius.com',
  plan: 'Premium', // Can be 'Trial', 'Basic', 'Premium', 'Pro'
  connectedCount: 0,
  postsCount: 12,
  engagementRate: 3.5,
  scheduledCount: 5,
};

const INITIAL_FORM_DATA = {
  niche: 'technology',
  customNiche: '',
  contentType: 'educational',
  brandVoice: 'professional',
  ageRange: '25-34',
  interests: ['technology', 'marketing', 'business'],
  postQuantity: 3,
  autoPost: false,
};

const PLATFORMS = [
  { name: 'Instagram', icon: 'fab fa-instagram', color: 'pink-500', bg: 'bg-gradient-to-br from-purple-500 via-pink-500 to-orange-400', isTrialAvailable: false },
  { name: 'TikTok', icon: 'fab fa-tiktok', color: 'gray-900', bg: 'bg-gradient-to-br from-gray-900 via-gray-800 to-pink-500', isTrialAvailable: false },
  { name: 'Twitter', icon: 'fab fa-twitter', color: 'blue-400', bg: 'bg-gradient-to-br from-blue-400 to-blue-500', isTrialAvailable: false },
