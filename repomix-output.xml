import React, { useState } from 'react';
import './FunnelBuilder.css';
import { toolsApi } from '../../api/toolsApi';

const FunnelBuilder = () => {
  // ============================================
  // STATE MANAGEMENT
  // ============================================
  const [formData, setFormData] = useState({
    businessName: '',
    businessType: 'ecommerce',
    targetAudience: '',
    primaryOffer: '',
    funnelGoal: 'lead-generation',
    budget: '1000'
  });

  const [result, setResult] = useState(null);
  const [loading, setLoading] = useState(false);
  const [showResults, setShowResults] = useState(false);

  // ============================================
  // EVENT HANDLERS
  // ============================================
  const handleInputChange = (e) => {
    const { name, value } = e.target;
    setFormData(prev => ({ ...prev, [name]: value }));
  };

  const handleSubmit = async () => {
    if (!formData.businessName.trim() || !formData.targetAudience.trim() || !formData.primaryOffer.trim()) {
      alert('Please fill in all required fields: Business Name, Target Audience, and Primary Offer');
      return;
    }

    setLoading(true);

    try {
      const response = await toolsApi.buildFunnel(formData);
      
      if (response.success) {
        setResult(response.data);
        setShowResults(true);
        
        setTimeout(() => {
          document.getElementById('results-section')?.scrollIntoView({ behavior: 'smooth' });
        }, 100);
      }
    } catch (error) {
      console.error('Error building funnel:', error);
      alert('Error building marketing funnel. Please try again.');
    } finally {
      setLoading(false);
    }
  };

  const useTemplate = (templateType) => {
    const templates = {
      'ecommerce': {
        businessType: 'ecommerce',
        targetAudience: 'Online shoppers interested in [your product category]',
        primaryOffer: 'Your main product or collection',
        funnelGoal: 'product-sales'
      },
      'saas': {
        businessType: 'saas',
        targetAudience: 'Business professionals needing [your solution]',
        primaryOffer: 'Software subscription or service',
        funnelGoal: 'app-signups'
      },
      'course': {
        businessType: 'service',
        targetAudience: 'Students and professionals wanting to learn [your topic]',
        primaryOffer: 'Online course or coaching program',
        funnelGoal: 'course-enrollment'
      }
    };

    const template = templates[templateType];
    if (template) {
      setFormData(prev => ({ ...prev, ...template }));
      showNotification('Template applied! Fill in your specific details and click "Build My Funnel"');
    }
  };

  const exportFunnel = () => {
    if (!result) return;

    const funnelText = `
Marketing Funnel Plan
=====================

Funnel: ${result.name}
